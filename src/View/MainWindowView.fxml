<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>


<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainWindowController">
   <opaqueInsets>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </opaqueInsets>
   <top>
      <Label alignment="CENTER" text="Do you wish to join or create a chatroom?" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="btnChoiceJoin" alignment="CENTER" onAction="#clickJoinChatroom"
            mnemonicParsing="false" prefHeight="31.0" prefWidth="68.0" 
            text="Join" HBox.hgrow="ALWAYS" />
            <Button id="btnChoiceCreate" alignment="CENTER" onAction="#clickCreateChatroom"
            mnemonicParsing="false" 
            text="Create" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </center>
</BorderPane>
